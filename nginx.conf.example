# CMS Nginx Reverse Proxy Configuration
# 
# Installation:
# 1. sudo cp nginx.conf.example /etc/nginx/sites-available/cms
# 2. sudo ln -s /etc/nginx/sites-available/cms /etc/nginx/sites-enabled/
# 3. sudo nginx -t
# 4. sudo systemctl reload nginx

# ============================================
# Option 1: Standalone Domain
# ============================================
server {
    listen 80;
    server_name news.example.com;

    # Optional: Force HTTPS
    # return 301 https://$host$request_uri;
    
    # Logs
    access_log /var/log/nginx/cms-access.log;
    error_log /var/log/nginx/cms-error.log;

    # CMS App
    location / {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # WebSocket Support (falls später benötigt)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
}

