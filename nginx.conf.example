# ============================================
# Option 3: HTTPS mit Let's Encrypt
# ============================================
# Nach Certbot-Setup:
# sudo certbot --nginx -d news.example.com

server {
    listen 443 ssl http2;
    server_name news.example.com;

    # SSL Certificates (von Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/news.example.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/news.example.com/privkey.pem;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Logs
    access_log /var/log/nginx/cms-access.log;
    error_log /var/log/nginx/cms-error.log;

    # CMS App
    location / {
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }
}

# ============================================
# Option 4: Reader-Only Public Access
# ============================================
# Nur /reader/ und / Pfad für öffentlichen Zugriff freigeben
# Admin-Interface (/admin/) bleibt geblockt

server {
    listen 80;
    server_name public.example.com;

    # Root und Reader-Routen erlauben
    location / {
        # Block Admin-Routen
        if ($request_uri ~* "^/admin") {
            return 403;
        }
        
        proxy_pass http://localhost:5001;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
    }
    
    # Explizit Admin blockieren (doppelte Absicherung)
    location /admin {
        return 403;
    }
}
